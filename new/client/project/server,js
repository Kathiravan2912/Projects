const express = require("express");
const mongoose = require("mongoose");
const bodyParser = require("body-parser");
const cors = require("cors");

const app = express();

// Middleware
app.use(bodyParser.json());
app.use(cors());

// MongoDB connection
const uri = "mongodb://localhost:27017/dynamicDB"; // Update with your MongoDB connection string
mongoose.connect(uri, { useNewUrlParser: true, useUnifiedTopology: true });

const db = mongoose.connection;
db.on("error", console.error.bind(console, "MongoDB connection error:"));
db.once("open", () => {
  console.log("Connected to MongoDB");
});

// Route to create a dynamic table
app.post("/api/createTable", async (req, res) => {
  const { tableName, username, number } = req.body;

  if (!tableName || !username || !number) {
    return res.status(400).json({ message: "All fields are required" });
  }

  try {
    // Define a dynamic schema and model
    const dynamicSchema = new mongoose.Schema({
      username: String,
      number: String,
    });

    const DynamicModel = mongoose.model(tableName, dynamicSchema);

    // Insert data into the dynamic table
    const newEntry = new DynamicModel({ username, number });
    await newEntry.save();

    res.status(201).json({ message: `Table '${tableName}' created successfully` });
  } catch (error) {
    console.error("Error creating table:", error);
    res.status(500).json({ message: "Failed to create table" });
  }
});

// Start server
const PORT = 5000;
app.listen(PORT, () => {
  console.log(`Server running on http://localhost:${PORT}`);
});
